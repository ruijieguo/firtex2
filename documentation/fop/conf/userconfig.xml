  <renderers>
    <renderer mime="application/pdf">
      <fonts>

        <!-- Advanced font configuration 
        <font kerning="yes" metrics-url="../fop/conf/simhei.xml" embed-url="simhei.ttf">
            <font-triplet name="SimHei" style="normal" weight="normal"/>
        </font>
        <font kerning="yes" metrics-url="simsun.xml" embed-url="simsun.ttc" sub-font="SimSun">
            <font-triplet name="SimSun" style="normal" weight="normal"/>
        </font>
        <font kerning="yes" metrics-url="simfang.xml" embed-url="simfang.ttf">
            <font-triplet name="FangSong" style="normal" weight="normal"/>
        </font>
-->
        <font kerning="yes" metrics-url="../fop/conf/fzcys.xml" embed-url="fzcys.ttf">
            <font-triplet name="FZCuYaSong" style="normal" weight="normal"/>
        </font>
        <font kerning="yes" metrics-url="../fop/conf/fzbys.xml" embed-url="fzbys.ttf">
            <font-triplet name="FZBoYaSong" style="normal" weight="normal"/>
        </font>
	<!--<font kerning="yes" metrics-url="../fop/conf/fzss.xml" embed-url="fzss.ttf">
            <font-triplet name="FZShuSong" style="normal" weight="normal"/>
