        <!-- register all the fonts found in this directory and all sub directories -->
        <!--directory recursive="true">/usr/share/fonts</directory-->

        <!-- automatically detect operating system installed fonts -->
        <auto-detect/>
      </fonts>
    </renderer>
  </renderers>
